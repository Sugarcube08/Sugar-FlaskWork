# ================================
# Miscellaneous
# ================================
# Your application's name
APP_NAME=MyFlaskApp             
# Application version
APP_VERSION=1.0.0               

# ================================
# Testing Configuration
# ================================
# Whether to run Flask in testing mode
TESTING=True                    

# ================================
# General Settings
# ================================
# The entry point to your Flask application
FLASK_APP=app.py          
# Options: development, testing, production
FLASK_ENV=development     
# Enable debugging in development
FLASK_DEBUG=True          

# ================================
# Secret Key (for sessions, CSRF, etc.)
# ================================
# Keep it secret, keep it safe
SECRET_KEY=your-secret-key-here  

# ================================
# Database Configuration
# ================================
# Options: postgresql, mysql, sqlite, etc.
DATABASE_DRIVER=sqlite      
# Your DB host, e.g., localhost
DATABASE_HOST=localhost         
# Default port for PostgreSQL
DATABASE_PORT=5432              
# Database name
DATABASE_NAME=your_db_name      
# Database username
DATABASE_USER=your_db_user      
# Database password
DATABASE_PASSWORD=your_db_pass  

# SQLAlchemy Configuration
SQLALCHEMY_TRACK_MODIFICATIONS=False
SQLALCHEMY_ECHO=False

# ================================
# Mail Configuration (Optional)
# ================================
# SMTP server
MAIL_HOST=smtp.mailtrap.io       
# SMTP port (e.g., 587 for TLS)
MAIL_PORT=587                    
# Use TLS encryption
MAIL_USE_TLS=True                
# Use SSL (optional)
MAIL_USE_SSL=False               
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password

# ================================
# Logging Settings
# ================================
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO                  
# Log file name for application logs
LOG_FILE=app.log                

# ================================
# 3rd Party API Keys
# ================================
STRIPE_SECRET_KEY=your-stripe-secret-key
SENDGRID_API_KEY=your-sendgrid-api-key